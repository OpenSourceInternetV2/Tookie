<% layout('../layout') -%>

<div class="login-box">
  <% if (message) { %>
    <div class="flash-error">
      <p><%= message %></p>
    </div>
  <% } %>

  <form action="/register" method="post">
    <div class="login-inputs">
      <input type="text" name="username" required placeholder="User" class="default-input" autocomplete="off" />
      <input type="email" name="email" required placeholder="Email" autocomplete="off" />
      <input type="password" name="password" id="password" required placeholder="Password" autocomplete="off"/>
      <input type="password" name="confirmPassword" required placeholder="Confirm password" onfocus="validatePassword(document.getElementById('password'), this);" oninput="validatePassword(document.getElementById('password'), this);" autocomplete="off" />
    </div>
    <div class="login-buttons">
      <div class="login-separator"></div>
      <button type="submit" class="wide-button righty">Register</button>
    </div>
  </form>
</div>